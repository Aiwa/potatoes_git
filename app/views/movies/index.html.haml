-#  This file is app/views/movies/index.html.haml
%h1 All Movies  - Editing Sortable Headers 2!

= form_tag movies_path, :method => :get  do
  = hidden_field_tag "title_sort", true if @lite_title
  = hidden_field_tag ":release_date_sort", true if @lite_date
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]",1,@selected_ratings.include?(rating)
  = submit_tag 'Refresh', :id => 'ratings_submit'


%table#movies
  %thead
    %tr
      %th#title_header{:class => @lite_title}= link_to "Movie Title", movies_path(:sort => "title", :ratings => @selected_ratings)
      %th Rating
      %th#release_date_header{:class => @lite_date}= link_to "Release Date", movies_path(:sort => "release_date", :ratings => @selected_ratings)
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
